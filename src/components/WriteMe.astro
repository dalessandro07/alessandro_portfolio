---
import { Icon } from 'astro-icon/components'
import videoBg from '@/assets/videos/bg.mp4'
import { EMAIL_URL, WHATSAPP_URL } from '@/utils/consts'
---

<div class='absolute left-0 right-0 overflow-hidden h-1/3 md:h-52'>
	<video class='min-w-full rotate-180' autoplay muted loop>
		<source src={videoBg} type='video/mp4' />
	</video>
</div>

<div
	class='absolute left-0 right-0 z-20 flex flex-wrap items-center justify-center px-6 py-16 mt-2 text-white md:py-8 lg:py-16 lg:px-12 gap-y-12 md:justify-between gap-x-8 xl:max-w-7xl xl:mx-auto'>
	<h3 class='text-6xl font-bold'>¡Escríbeme!</h3>

	<div class='flex flex-wrap items-center gap-4'>
		<a
			href={EMAIL_URL}
			class='flex items-center gap-2 px-8 py-4 text-lg font-extrabold transition-all duration-200 bg-blue-700 hover:bg-blue-800 rounded-2xl'>
			<Icon class='w-6 h-6 group-hover:text-blue-600' name='mail' />
			<span> dev.alessandro@outlook.com</span>
		</a>

		<a
			href={WHATSAPP_URL}
			class='flex items-center gap-2 px-8 py-4 text-lg font-extrabold transition-all duration-200 bg-green-600 hover:bg-green-700 rounded-2xl'>
			<Icon class='w-6 h-6 group-hover:text-green-600' name='whatsapp' />
			<span> WhatsApp</span>
		</a>
	</div>
</div>
