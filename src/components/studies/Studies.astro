---
import studies from "../../data/studies.json";
import Study from "./Study.astro";
---

<div id="estudios"></div>

<section id="studies" class="flex flex-col gap-32">
	<header class="flex flex-col gap-8 md:mt-14">
		<h2 class="font-extrabold text-5xl sm:text-7xl">Estudios</h2>
	</header>

	<article class="flex flex-wrap justify-between gap-y-20">
		{studies.map((study) => <Study {...study} />)}
	</article>
</section>

<script>
	window
		.ScrollReveal()
		.reveal("#studies", { delay: 200, easing: "ease-in-out" });
</script>
