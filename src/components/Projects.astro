---
import Project from './Project.astro'

const projects = [
	{
		name: 'DrCafe',
		description:
			'Proyecto final del curso de ReactJs en Coderhouse, el cual aprobé con la máxima calificación y destacando en el <strong class="text-customBlack font-bold">top 10</strong> de estudiantes. <br/> <br/> Fue un reto implementar interfaces de usuario <strong class="text-customBlack font-bold">complejas y dinámicas</strong>, además de aprender a trabajar con Firebase y React Router.',
		url: 'https://astro.build',
		imagePaths: [
			'/images/drcafe/DRCAFE.webp',
			'/images/drcafe/drcafe-products.webp',
			'/images/drcafe/drcafe-order.webp'
		]
	},
	{
		name: 'Snowpack',
		description: 'The web application build tool.',
		url: 'https://snowpack.dev',
		imagePaths: ['/images/allexLogin.webp']
	}
]
---

<section class="mt-12 flex flex-col gap-24">
	<h2 class="font-extrabold text-6xl">Proyectos</h2>
	<article class="flex flex-col gap-40">
		{projects.map((project) => <Project {...project} />)}
	</article>
</section>
