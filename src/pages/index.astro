---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import HeroSection from '../components/HeroSection.astro'
import About from '../components/About.astro'
import Footer from '../components/Footer.astro'

const title = 'Alessandro Rios - Desarrollador Front-End'

const description =
	'Alessandro es un estudiante de computación e informática, especializado en software y con certificaciones en desarrollo web.'

const actualYear = new Date().getFullYear()
---

<Layout title={title} description={description}>
	<div class="min-h-screen flex flex-col gap-32 m-5 mx-12">
		<Header />

		<main class="grow flex flex-col gap-20">
			<HeroSection />
			<About />
		</main>

		<Footer title={title} description={description} actualYear={actualYear} />
	</div>
</Layout>

