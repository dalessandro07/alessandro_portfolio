---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import PublicationsHeader from "../components/header/PublicationsHeader.astro";
import { publications } from "../data/publications.json";
---

<Layout
	title="Recursos para desarrolladores - Alessandro Rios"
	description="Recursos que he utilizado mucho a la hora de desarrollar software. Especialmente desarrollo web."
>
	<div
		class="flex flex-col justify-center mt-28 mb-6 px-5 xs:px-10 sm:px-14 xl:max-w-7xl xl:mx-auto"
	>
		<PublicationsHeader />

		<section class="flex flex-wrap justify-center gap-5 xl:gap-10 mb-20">
			{
				publications.map((pub) => (
					<article class="flex flex-col gap-5">
						<h2 class="font-bold text-3xl">{pub.title}</h2>
						<iframe
							class="rounded-lg h-96"
							src={pub.link}
							height=""
							width=""
							allowfullscreen=""
							title="Publicación integrada"
						/>
					</article>
				))
			}
		</section>

		<Footer
			title="Últimas publicaciones"
			description="Publicaciones que he compartido recientemente en LinkedIn."
		/>
	</div>
</Layout>
