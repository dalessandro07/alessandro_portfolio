---
import MainHanoi from '@/components/hanoi/MainHanoi'
import Layout from '@/layouts/Layout.astro'
import { MAIN_DESCRIPTION } from '@/utils/consts'
---

<Layout title={`Torre de Hanoi`} description={MAIN_DESCRIPTION}>
  <div class='flex flex-col gap-5 px-5 min-h-dvh xs:px-10 sm:px-14 xl:max-w-7xl xl:mx-auto'>
    <main class='flex flex-col gap-12 grow mt-36'>
      <header>
        <h1 class='text-4xl font-bold text-center'>Torre de Hanoi</h1>
        <p class='mt-4 text-lg text-center'>
          Mueve todos los discos desde la primera torre hasta la tercera. No puedes colocar un disco
          más grande sobre uno más pequeño.
        </p>
      </header>

      <MainHanoi client:only />
    </main>
  </div>
</Layout>
